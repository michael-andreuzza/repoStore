---
import Mike from "@/avatars/mike.jpg";
import { Image } from "astro:assets";
import StarTopLeft from "../assets/StarTopLeft.astro";
import StarTopRight from "../assets/StarTopRight.astro";
import StarBottomLeft from "@/components/assets/StarBottomLeft.astro";
import StarBottomRight from "@/components/assets/StarBottomRight.astro";
---

<div
  class="items-start border-x border-t border-dashed border-zinc-200 dark:border-zinc-700 p-8 lg:p-32 relative">
  <StarTopLeft/>
  <StarTopRight/>
  <StarBottomLeft />
  <StarBottomRight />
  <h4
    class="text-black dark:text-white text-2xl tracking-tight font-medium text-balance font-mono">
    “I spent years searching for an easy, hassle-free way to sell my
    repositories to customers on Lexington Themes. Once I started using
    Polar.sh, my customers were thrilled, and my revenue increased by 30%.‌”
  </h4>
  <div class="flex items-center gap-2 justify-end mt-8">
    <div>
      <Image
        class="inline-block size-9 rounded-full"
        src={Mike}
        alt="logo"
      />

    </div>
    <a
      class="text-md leading-normal hover:text-accent-500 font-medium text-zinc-500"
      href="https://lexingtonthemes.com/">
      <h3
        class="text-sm/7 font-medium font-mono tracking-tight text-black dark:text-white text-balance">
        Michael Andreuzza, Founder.
      </h3>
      <p class="text-sm text-zinc-500 dark:text-zinc-400">Lexington Themes</p>
    </a>
  </div>
</div>
