---
import { Image } from "astro:assets";

import Vercel from "@/logos/vercel.svg";
import Netlify from "@/logos/netlify.svg";
---

<div
  class="relative lg:col-span-2 md:border-l border-b lg:border-b-0 border-dashed border-zinc-200 dark:border-zinc-700">
  <div class="relative flex h-full flex-col overflow-hidden">
    <div
      class="relative overflow-hidden w-full flex items-center justify-center gap-12 h-full min-h-80 border-t border-dashed border-zinc-200 dark:border-zinc-700">
      <div class="absolute inset">
        <!-- Largest circle (new) -->
        <div
          class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-[44rem] h-[44rem] flex items-center justify-center">
          <!-- New second largest circle -->
          <div
            class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-[40rem] h-[40rem] flex items-center justify-center">
            <!-- Previous largest circle -->
            <div
              class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-[36rem] h-[36rem] flex items-center justify-center">
              <!-- Extra large circle -->
              <div
                class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-[32rem] h-[32rem] flex items-center justify-center">
                <!-- Very large circle -->
                <div
                  class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-[28rem] h-[28rem] flex items-center justify-center">
                  <!-- Large circle -->
                  <div
                    class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-96 h-96 flex items-center justify-center">
                    <!-- Original largest circle -->
                    <div
                      class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-80 h-80 flex items-center justify-center">
                      <!-- Second circle -->
                      <div
                        class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-64 h-64 flex items-center justify-center">
                        <!-- Third circle -->
                        <div
                          class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-48 h-48 flex items-center justify-center">
                          <!-- Fourth circle -->
                          <div
                            class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-32 h-32 flex items-center justify-center">
                            <!-- Fifth circle -->
                            <div
                              class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-20 h-20 flex items-center justify-center">
                              <!-- Smallest circle (center) -->
                              <div
                                class="rounded-full border border-dashed border-zinc-200 dark:border-zinc-700 w-10 h-10">
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div
        class="shadow size-24 flex items-center rounded-full scale-[200%] bg-white dark:bg-zinc-800 relative">
        <Image
          class="h-16 dark:invert"
          src={Vercel}
          alt="logo"
        />
      </div>
      <div
        class="shadow size-24 flex items-center rounded-full scale-[200%] bg-white dark:bg-zinc-800 relative">
        <Image
          class="h-16 dark:invert"
          src={Netlify}
          alt="logo"
        />
      </div>
    </div>
    <div class="p-10 pb-4 order-first">
      <p
        class="text-lg/7 font-medium font-mono tracking-tight text-black dark:text-white text-balance">
        Docs for configuring and deploying to Netlify & Vercel
      </p>
      <p class="mt-2 max-w-lg text-sm/6 text-zinc-500 dark:text-zinc-400">
        Step-by-step guides for seamless deployment to Netlify and Vercel.
      </p>
    </div>
  </div>
</div>
