---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Logo from "@/components/global/Logo.astro";
import StarBottomLeft from "@/components/assets/StarBottomLeft.astro";
import StarBottomRight from "@/components/assets/StarBottomRight.astro";
import StarTopLeft from "@/components/assets/StarTopLeft.astro";
import StarTopRight from "@/components/assets/StarTopRight.astro";
---

<BaseLayout>
  <Logo />
  <div
    class="gap-12 items-end border-x border-y border-dashed border-zinc-200 dark:border-zinc-700 p-8 relative">
    <StarTopRight />
    <StarTopLeft />
    <StarBottomLeft />
    <StarBottomRight />
    <div class="max-w-xl mx-auto">
      <div class="prose-styles">
        <h1>Support</h1>
        <p>
          If you need help with something related to your purchase (didn’t get
          your receipt, entered the wrong email at purchase, etc,…) please email
          me, I will do everything I can.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
